<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/mygift_tab_layout"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorMyApp"
            tabIndicatorColor="@android:color/white"
            tabIndicatorHeight="0.0dip"
            tabMode="fixed"
            tabTextAppearance="@style/NavigationTabTextAppeareance" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mygift_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout_behavior="@string/appbar_scrolling_view_behavior"/>


</LinearLayout>